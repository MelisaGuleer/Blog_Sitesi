@model IEnumerable<EntityLayer.Concrete.Blog>

@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br/>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Kategori</th>
        <th>Başlık</th>
        <th>Tarih</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.BlogID</td>
                    <td>@item.Category.CategoryName </td>
                    <td>@item.BlogTitle</td>
                    <td>@item.BlogDate.ToShortDateString()</td>
                    <td><a href="" class="btn btn-danger">Güncelle</a></td>
                    <td><a href="" class="btn btn-success">Sil</a></td>
                    <td><a href="" class="btn btn-warning">Detaylar</a></td>
                    <td><a href="" class="btn btn-dark">Yorumlar</a></td>
                </tr>
            }

 </table>
<a href="/Blog/AddNewBlog/" class="btn btn-primary">Yeni Blog Ekle </a>
